<link rel="stylesheet" type="text/css" href="/stylesheets/profile.css">

<div class="container">
    <div class="row profile">
        <div class="col-md-2">

            <div class="card testimonial-card">

                <div class="card-up default-color-dark">
                </div>

                <div class="avatar"><img src={{profilepic}} class="img-responsive"></div>

                <div class="card-block">
                    <h4 class="card-title">{{name}}</h4>
                    <hr>
                    <p>Score: {{score}}</p>
                    {{#if isFriend}}
                    {{else}}
                        <button type="button" class="btn btn-warning btn-sm friendreq" data-toggle="button" aria-pressed="false" autocomplete="off">Add Friend!</button>
                    {{/if}}
                </div>
            </div>
        </div>

        <div class="col-md-10">
            <div class="profile-content">
                <div class="card">
                    <div class="card-header primary-color white-text">To-Do</div>
                    <ul class="list-group">
                        {{#each todo}}
                        <li class="list-group-item">
                            {{this}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="card ">
                    <div class="card-header success-color white-text">Done</div>
                    <ul class="list-group">
                        {{#each complete}}
                        <li class="list-group-item">
                            {{this}}
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
<br>

<script src="/javascripts/jquery-3.1.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.friendreq').click(function() {
            $(this).fadeOut();
            alert("Friend request sent!");
        });
    })
</script>